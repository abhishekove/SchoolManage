<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentifo">

    <TextView
        android:id="@+id/stuname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sturoll"
        android:text="roll"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stuname" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/viewmarks"
        app:layout_constraintTop_toBottomOf="@id/sturoll"
        app:layout_constraintRight_toRightOf="parent"
        android:text="View Marks"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/at"
        app:layout_constraintTop_toBottomOf="@id/viewmarks"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Attendance"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/at"
        android:id="@+id/rec"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>