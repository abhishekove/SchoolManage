<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMarks">
<EditText
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/loadtdiv"
    android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loadtdiv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/loadbut"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/loadbut"
        android:id="@+id/recc"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/upmarks"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>